# Port for the Express backend server
PORT=5000

# PostgreSQL database host (usually localhost for local dev)
DB_HOST=localhost

# PostgreSQL database port
DB_PORT=5432

# PostgreSQL database name
DB_NAME=followuseverywhere

# PostgreSQL database user
DB_USER=your_db_user

# PostgreSQL database password
DB_PASSWORD=your_db_password

# Secret key used to sign JWTs
JWT_SECRET=replace_with_secure_secret

# Node environment (development, test, production)
NODE_ENV=development

# Base URL for backend API links (used in emails)
API_BASE_URL=http://localhost:5000

# Base URL for the frontend app (used in emails/redirects)
FRONTEND_BASE_URL=http://localhost:5173

# Allowed CORS origins (comma-separated)
CORS_ORIGIN=http://localhost:5173

# SMTP server host for email delivery
SMTP_HOST=smtp.example.com

# SMTP server port
SMTP_PORT=587

# Whether to use TLS for SMTP (true/false)
SMTP_SECURE=false

# SMTP username for authentication
SMTP_USER=your_smtp_user

# SMTP password for authentication
SMTP_PASS=your_smtp_password

# Default "from" address for outgoing emails
EMAIL_FROM="Follow Us Everywhere <no-reply@followuseverywhere.app>"
